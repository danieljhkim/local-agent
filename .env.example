# Local Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider API Keys
# =============================================================================
# Only set the API keys for providers you plan to use

# Anthropic Claude API Key (for claude-3.5-sonnet, claude-3-opus, etc.)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key (for gpt-4, gpt-3.5-turbo, etc.)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Ollama Configuration (for local models)
# =============================================================================
# Base URL for Ollama server
OLLAMA_BASE_URL=http://localhost:11434

# Default chat model for Ollama
OLLAMA_CHAT_MODEL=llama3.1:8b

# Embedding model for Ollama (used for RAG)
OLLAMA_EMBED_MODEL=nomic-embed-text

# Request timeout in seconds for Ollama
OLLAMA_TIMEOUT=120

# =============================================================================
# Database Configuration
# =============================================================================
# Explicit database file path (overrides AGENT_STATE_DIR)
# AGENT_DATABASE_PATH=~/.local/agent/state/local_agent.db

# State directory (database will be created here)
AGENT_STATE_DIR=~/.local/agent/state

# =============================================================================
# Qdrant Vector Database (for RAG)
# =============================================================================
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Collection name for document embeddings
QDRANT_COLLECTION=local_agent_docs

# =============================================================================
# RAG Configuration
# =============================================================================
# Number of top results to retrieve from vector store
RAG_TOP_K=8

# =============================================================================
# Chat Configuration
# =============================================================================
# Number of recent messages to include in context
CHAT_CONTEXT_MESSAGES=20

# =============================================================================
# Web Server Configuration (if using web/API mode)
# =============================================================================
# Host to bind to
# WEB_HOST=0.0.0.0

# Port to listen on
# WEB_PORT=8000

# =============================================================================
# Audit Logging
# =============================================================================
# Enable audit logging
# AGENT_AUDIT__ENABLED=true

# Audit log directory
# AGENT_AUDIT__LOG_DIR=~/.local/agent/logs
